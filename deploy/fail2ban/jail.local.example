# fail2ban jail.local â€” copy to /etc/fail2ban/jail.local on the server
# Apply manually (root): cp deploy/fail2ban/jail.local.example /etc/fail2ban/jail.local

[DEFAULT]
bantime = 3600
findtime = 600
maxretry = 5

[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
maxretry = 3

[caddy-auth]
enabled = true
port = http,https
filter = caddy-auth
logpath = /var/log/caddy/access.log
maxretry = 10
findtime = 60
bantime = 3600
